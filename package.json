{
  "name": "flask-preact-typescript-tailwind-template",
  "version": "1.0.0",
  "description": "This is a template for a Flask Python application.",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx app/static",
    "build": "cross-env NODE_ENV=production tsc && webpack --config webpack.config.mjs && python app/freeze.py",
    "watch:ts": "tsc --watch",
    "start:flask": "set FLASK_APP=app.app&& nodemon --exec \"flask run\" --ext py,ts --ignore app/static/js",
    "start:webpack": "cross-env NODE_ENV=development webpack --watch --config webpack.config.mjs",
    "start:browser-sync": "browser-sync start --proxy http://127.0.0.1:36969 --files 'app/static/**/*, app/templates/**/*' --port 36969",
    "start": "concurrently \"npm run start:webpack\" \"npm run start:flask\" \"npm run start:browser-sync\""
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@biomejs/biome": "1.8.3",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "file-loader": "^6.2.0",
    "history": "^5.3.0",
    "htm": "^3.1.1",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.40",
    "postcss-loader": "^7.0.2",
    "preact": "^10.23.1",
    "preact-render-to-string": "^6.5.7",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "rimraf": "^6.0.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.4.7",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@egjs/preact-flicking": "^4.11.4",
    "preact-router": "^4.1.2"
  }
}